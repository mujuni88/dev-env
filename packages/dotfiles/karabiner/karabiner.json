{
    "profiles": [
        {
            "name": "Homerow Mods + Caps Arrow",
            "selected": true,
            "virtual_hid_keyboard": { "keyboard_type_v2": "ansi" },
            "complex_modifications": {
                "parameters": {
                    "basic.to_if_alone_timeout_milliseconds": 200,
                    "basic.to_if_held_down_threshold_milliseconds": 200
                },
                "rules": [
                    {
                        "description": "Caps Lock: tap=Tab, hold=Arrow layer (hjkl)",
                        "manipulators": [
                            {
                                "type": "basic",
                                "from": { "key_code": "caps_lock" },
                                "to_if_alone": [{ "key_code": "tab" }],
                                "to_if_held_down": [{ "set_variable": { "name": "arrow_layer", "value": 1 } }],
                                "to_after_key_up": [{ "set_variable": { "name": "arrow_layer", "value": 0 } }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "h" },
                                "to": [{ "key_code": "left_arrow" }],
                                "conditions": [{ "type": "variable_if", "name": "arrow_layer", "value": 1 }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "j" },
                                "to": [{ "key_code": "down_arrow" }],
                                "conditions": [{ "type": "variable_if", "name": "arrow_layer", "value": 1 }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "k" },
                                "to": [{ "key_code": "up_arrow" }],
                                "conditions": [{ "type": "variable_if", "name": "arrow_layer", "value": 1 }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "l" },
                                "to": [{ "key_code": "right_arrow" }],
                                "conditions": [{ "type": "variable_if", "name": "arrow_layer", "value": 1 }]
                            }
                        ]
                    },
                    {
                        "description": "G/H = Hyper when held",
                        "manipulators": [
                            {
                                "type": "basic",
                                "from": { "key_code": "g" },
                                "to_if_alone": [{ "key_code": "g" }],
                                "to_if_held_down": [{ "key_code": "left_shift", "modifiers": ["left_command", "left_control", "left_option"] }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "h" },
                                "to_if_alone": [{ "key_code": "h" }],
                                "to_if_held_down": [{ "key_code": "right_shift", "modifiers": ["right_command", "right_control", "right_option"] }],
                                "conditions": [{ "type": "variable_unless", "name": "arrow_layer", "value": 1 }]
                            }
                        ]
                    },
                    {
                        "description": "Left homerow mods: A=Ctrl, S=Alt, D=Cmd, F=Shift",
                        "manipulators": [
                            {
                                "type": "basic",
                                "from": { "key_code": "a" },
                                "to_if_alone": [{ "key_code": "a" }],
                                "to_if_held_down": [{ "key_code": "left_control" }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "s" },
                                "to_if_alone": [{ "key_code": "s" }],
                                "to_if_held_down": [{ "key_code": "left_option" }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "d" },
                                "to_if_alone": [{ "key_code": "d" }],
                                "to_if_held_down": [{ "key_code": "left_command" }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "f" },
                                "to_if_alone": [{ "key_code": "f" }],
                                "to_if_held_down": [{ "key_code": "left_shift" }]
                            }
                        ]
                    },
                    {
                        "description": "Right homerow mods: J=Shift, K=Cmd, L=Alt, ;=Ctrl",
                        "manipulators": [
                            {
                                "type": "basic",
                                "from": { "key_code": "j" },
                                "to_if_alone": [{ "key_code": "j" }],
                                "to_if_held_down": [{ "key_code": "right_shift" }],
                                "conditions": [{ "type": "variable_unless", "name": "arrow_layer", "value": 1 }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "k" },
                                "to_if_alone": [{ "key_code": "k" }],
                                "to_if_held_down": [{ "key_code": "right_command" }],
                                "conditions": [{ "type": "variable_unless", "name": "arrow_layer", "value": 1 }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "l" },
                                "to_if_alone": [{ "key_code": "l" }],
                                "to_if_held_down": [{ "key_code": "right_option" }],
                                "conditions": [{ "type": "variable_unless", "name": "arrow_layer", "value": 1 }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "semicolon" },
                                "to_if_alone": [{ "key_code": "semicolon" }],
                                "to_if_held_down": [{ "key_code": "right_control" }]
                            }
                        ]
                    }
                ]
            },
            "devices": [
                {
                    "identifiers": {
                        "is_keyboard": true,
                        "product_id": 10203,
                        "vendor_id": 5824
                    },
                    "ignore": true,
                    "manipulate_caps_lock_led": false
                }
            ]
        }
    ]
}
