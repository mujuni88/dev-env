// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "context_servers": {
    "mcp-server-context7": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "default_minimum_tokens": "10000"
      }
    },
    "hawkins-scraper": {
      "source": "custom",
      "enabled": true,
      "args": [
        "-y",
        "@netflix-internal/mcp-server-hawkins-scraper"
      ],
      "command": "npx",
      "env": {
        "HAWKINS_ASSETS_PATH": "/Users/jbuza/Code/Netflix/netflix-libs/node_modules/@hawkins/assets/",
        "HAWKINS_COMPONENTS_PATH": "/Users/jbuza/Code/Netflix/netflix-libs/node_modules/@hawkins/components",
        "HAWKINS_FORMS_PATH": "/Users/jbuza/Code/Netflix/netflix-libs/node_modules/@hawkins/forms",
        "HAWKINS_HELPERS_PATH": "/Users/jbuza/Code/Netflix/netflix-libs/node_modules/@hawkins/helpers/",
        "HAWKINS_ICONS_PATH": "/Users/jbuza/Code/Netflix/netflix-libs/node_modules/@hawkins/icons/",
        "HAWKINS_SEARCH_PATH": "/Users/jbuza/Code/Netflix/netflix-libs/node_modules/@hawkins/search/",
        "HAWKINS_STYLES_PATH": "/Users/jbuza/Code/Netflix/netflix-libs/node_modules/@hawkins/styles/",
        "HAWKINS_TABLE_PATH": "/Users/jbuza/Code/Netflix/netflix-libs/node_modules/@hawkins/table",
        "HAWKINS_VARIABLES_PATH": "/Users/jbuza/Code/Netflix/netflix-libs/node_modules/@hawkins/variables/"
      }
    },
    "playwright": {
      "source": "custom",
      "enabled": true,
      "args": [
        "@playwright/mcp@latest"
      ],
      "command": "npx",
      "env": {}
    }
  },
  "icon_theme": "Colored Zed Icons Theme Dark",
  "vim_mode": true,
  "base_keymap": "Cursor",
  "ui_font_size": 15,
  "buffer_font_size": 14,
  "ui_font_family": "Menlo",
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Claude Code Inspired Dark"
  },
  "vim": {
    "default_mode": "normal",
    "use_system_clipboard": "always",
    "use_smartcase_find": true,
    "toggle_relative_line_numbers": true
  },
  "relative_line_numbers": true,
  "auto_update": false,
  "confirm_quit": true,
  "tab_size": 2,
  "indent_guides": {
    "enabled": true
  },
  "terminal": {
    "dock": "right"
  }
}
