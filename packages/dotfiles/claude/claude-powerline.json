{
  "theme": "dark",
  "display": {
    "padding": 1,
    "style": "powerline",
    "charset": "unicode",
    "lines": [
      {
        "segments": {
          "directory": { "enabled": true, "style": "fish" },
          "model": { "enabled": true },
          "session": { "enabled": true, "type": "cost" },
          "context": { "enabled": false }
        }
      },
      {
        "segments": {
          "git": {
            "enabled": true,
            "showSha": false,
            "showWorkingTree": true,
            "showUpstream": true,
            "showRepoName": true,
            "showTimeSinceCommit": false
          },
          "metrics": {
            "enabled": true,
            "showResponseTime": false,
            "showDuration": false,
            "showMessageCount": false,
            "showLinesAdded": true,
            "showLinesRemoved": true
          }
        }
      }
    ]
  }
}
