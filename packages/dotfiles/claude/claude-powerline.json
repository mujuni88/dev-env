{
  "theme": "dark",
  "display": {
    "padding": 1,
    "style": "minimal",
    "charset": "unicode",
    "lines": [
      {
        "segments": {
          "directory": { "enabled": true, "style": "fish" },
          "git": {
            "enabled": true,
            "showSha": false,
            "showWorkingTree": true,
            "showUpstream": false,
            "showRepoName": false,
            "showTimeSinceCommit": false,
            "showStashCount": false,
            "showTag": false,
            "showOperation": false
          },
          "model": { "enabled": true },
          "session": { "enabled": true, "type": "cost" },
          "today": { "enabled": true, "type": "cost" },
          "context": { "enabled": false }
        }
      }
    ]
  }
}
