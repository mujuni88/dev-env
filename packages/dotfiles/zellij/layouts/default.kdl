// Custom default layout with fully qualified plugin paths
// Workaround for https://github.com/zellij-org/zellij/issues/4338
layout {
    pane size=1 borderless=true {
        plugin location="zellij:tab-bar"
    }
    pane
    pane size=1 borderless=true {
        plugin location="zellij:status-bar"
    }
}
